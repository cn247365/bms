﻿@model WebApp.Models.Comment
  <div class="form-row">
   @Html.HiddenFor(x=>x.Id)
         <!--Content-->
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="form-label">  @Html.DisplayNameFor(model => model.Content)</label>
			@Html.EditorFor(x => x.Content, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.Content) } })
      
         </div>

        <!--User Name-->
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="form-label">  @Html.DisplayNameFor(model => model.UserName)</label>
			@Html.EditorFor(x => x.UserName, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.UserName) } })
      
         </div>

        <!--Display Name-->
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="form-label">  @Html.DisplayNameFor(model => model.DisplayName)</label>
			@Html.EditorFor(x => x.DisplayName, new { htmlAttributes = new { @class = "form-control", placeholder = Html.DisplayNameFor(x => x.DisplayName) } })
      
         </div>

       <!--Date-->
       <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="form-label"> <span class="text-danger">*</span> @Html.DisplayNameFor(model => model.PublishDate)</label>
            <div class="input-group">
			  @Html.EditorFor(x => x.PublishDate, 
                         new { htmlAttributes = new { @class = "form-control datepicker",
                               placeholder = Html.DisplayNameFor(x => x.PublishDate ) } })
               <div class="input-group-append">
                                                            <span class="input-group-text fs-xl">
                                                                <i class="fal fa-calendar-alt"></i>
                                                            </span>
                                                        </div>
			 </div>
         </div>

		<!--Evaluate-->
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="form-label"> <span class="text-danger">*</span> @Html.DisplayNameFor(model => model.Evaluate)</label>
            @Html.EditorFor(x => x.Evaluate, new { htmlAttributes = new { @class = "form-control",@type="number", placeholder = Html.DisplayNameFor(x => x.Evaluate) } })

        </div>

     
       <!--Comment-->
       <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="form-label"> <span class="text-danger">*</span> @Html.DisplayNameFor(model => model.ParentId)</label>
   	        @Html.DropDownListFor(model => model.ParentId, ViewBag.ParentId as List<SelectListItem>, htmlAttributes: new { @class = "form-control" }) 
       </div>

     
       <!--Book-->
       <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
            <label class="form-label"> <span class="text-danger">*</span> @Html.DisplayNameFor(model => model.BookId)</label>
   	        @Html.DropDownListFor(model => model.BookId, ViewBag.BookId as List<SelectListItem>, htmlAttributes: new { @class = "form-control" }) 
       </div>

	    
</div>

