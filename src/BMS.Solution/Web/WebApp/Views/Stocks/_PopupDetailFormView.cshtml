<script type="text/javascript">
 //当初始的 HTML 文档被完全加载和解析完成之后
 document.addEventListener('DOMContentLoaded', function () {
     //绑定按钮事件
    $('button[name="saveitembutton"]').on('click', savestockitem);
    $('button[name="deleteitembutton"]').on('click', deletestockitem);
  });
    //判断新增编辑状态
    var MODELSTATE = 'Added';
    var stockid = null;
    function openstockdetailwindow(data,state) {
         MODELSTATE = state;
         //判断是否显示功能按钮
        if (MODELSTATE === 'Added') {
          $('#deleteitem-btn-group').hide();
        } else {
          $('#deleteitem-btn-group').show();
        }
        initstockdetailview();
         stockid = (data.Id || 0);
         $('#stockdetailwindow').window('open');
         $('#stock_form').form('reset');
         $('#stock_form').form('load', data);
             }
  //删除当前记录
  function deletestockitem() {
    $.messager.confirm('确认', '你确定要删除该记录?', result => {
      if (result) {
        const url = `/Stocks/Delete/${stockid}`;
        $.get(url).done(res => {
          if (res.success) {
            toastr.success("删除成功");
            $('#stockdetailwindow').window('close');
            reloadData();
          } else {
            $.messager.alert('错误', res.err, 'error');
          }
        });
      }
    });
  }
    //async 保存数据
    async function savestockitem() { 
      const $stockform = $('#stock_form');
      if ($stockform.form('enableValidation').form('validate')) {
            let stock = $stockform.serializeJSON();
            let url = '/Stocks/Edit';
            //判断是新增或是修改方法
            if (MODELSTATE === 'Added') {
                url = '/Stocks/Create';
            }
            var token = $('input[name="__RequestVerificationToken"]', $stockform).val();
            $.ajax({
                    type: "POST",
                    url: url,
                    data: {
                        __RequestVerificationToken: token,
                        stock:stock
                    },
                    dataType: 'json',
                    contentType: 'application/x-www-form-urlencoded; charset=utf-8'
                })
                .done(response => {
                    if (response.success) {
                        hook = false;
                        $stockform.form('disableValidation');
                        $stockform.form('submitChanged');
                        $('#stockdetailwindow').window("close");
                        toastr.success("保存成功"); 
                        reloadData();
                    } else {
                        $.messager.alert("错误",   response.err, "error");
                    }
                    })
                .fail((jqXHR, textStatus, errorThrown) => {
                       $.messager.alert('异常', `${jqXHR.status}: ${jqXHR.statusText} `, 'error');
                    });
        }
    }
     //判断是否有没有保存的记录
     function stockhasmodified() {
            return hook;

     }


function initstockdetailview() {
//回车光标移动到下个输入控件
